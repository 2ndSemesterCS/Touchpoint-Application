            </StackPanel>
            <StackPanel x:Name="RedigerViewStack_Copy5" HorizontalAlignment="Right" Margin="0,1933,103,1055" Width="733" Orientation="Horizontal">
                <TextBlock Height="67" TextWrapping="Wrap" Text="Beskrivelse" VerticalAlignment="Top" Width="333" FontSize="36"/>
