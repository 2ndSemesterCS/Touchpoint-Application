            </StackPanel>
            <StackPanel x:Name="RedigerViewStack_Copy6" HorizontalAlignment="Right" Margin="0,2232,103,756" Width="733" Orientation="Horizontal">
                <TextBlock Height="67" TextWrapping="Wrap" Text="Depositum" VerticalAlignment="Top" Width="333" FontSize="36"/>
                <TextBox Height="67" TextWrapping="Wrap" Text="Indtast Depositum" VerticalAlignment="Top" Width="399" FontSize="36" TextChanged="TextBox_TextChanged"/>

            </StackPanel>
            <StackPanel x:Name="RedigerViewStack_Copy7" HorizontalAlignment="Right" Margin="0,2526,103,462" Width="733" Orientation="Horizontal">
                <TextBlock Height="67" TextWrapping="Wrap" Text="Underviser" VerticalAlignment="Top" Width="333" FontSize="36"/>
                <TextBox Height="67" TextWrapping="Wrap" Text="Indtast Underviser" VerticalAlignment="Top" Width="399" FontSize="36" TextChanged="TextBox_TextChanged"/>

            </StackPanel>
            <StackPanel x:Name="RedigerViewStack_Copy8" HorizontalAlignment="Right" Margin="0,2849,103,95" Width="733" Orientation="Horizontal">
                <TextBlock Height="67" TextWrapping="Wrap" Text="Lokation" VerticalAlignment="Top" Width="333" FontSize="36"/>
                <TextBox Height="67" TextWrapping="Wrap" Text="Indtast Lokation" VerticalAlignment="Top" Width="399" FontSize="36" TextChanged="TextBox_TextChanged"/>

            </StackPanel>
        </Grid>
    </Page>

