                    <TextBlock Margin="0,10" TextWrapping="Wrap" Text="Navn" Width="368" FontSize="48"/>
                    <TextBox TextWrapping="Wrap" Text="Indtast navn" Width="271" FontSize="48"/>
                </StackPanel>
            </StackPanel>
            <!-- Content -->
            <!-- Footer -->
        </StackPanel>
        <Button Click="BackToLokaleView" Content="Back" RenderTransformOrigin="0.48,0.57" Margin="34,283,0,0" VerticalAlignment="Top"/>
        <Button Content="Opret" HorizontalAlignment="Left" Margin="698,263,0,0" VerticalAlignment="Top" Width="129" Height="42"/>
    </Grid>
</Page>
